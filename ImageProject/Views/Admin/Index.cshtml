@{
    ViewData["Title"] = "AdminPanel";
}

<partial name="_AdminHeader" />
<div id="partialPlace">
    <table class="table">
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Register Date</th>
            <th></th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.RegisterDate</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="Edit" asp-route-id="@user.Id" data-bs-toggle="modal" data-bs-target="#exampleModal">Edit</a>
                    <form asp-controller="Admin" asp-action="BanUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">Ban</button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
@await Html.PartialAsync("Edit", new ImageProject.ViewModels.EditUserViewModel { Email = string.Empty, Id = string.Empty, UserName = string.Empty, Password = string.Empty })