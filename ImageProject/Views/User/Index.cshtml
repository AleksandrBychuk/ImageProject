@model User

@{
    ViewData["Title"] = Model.UserName;
}

<div>
    <p>@Model.UserName</p>
    <br />
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-7">
            <a class="btn float-end" asp-controller="User" asp-action="Euc" asp-route-userName="@Model.UserName" ><i class="bi bi-pencil"></i></a>
            <hr />
            @foreach (var item in Model.UserImages.OrderByDescending(u => u.DateAdded))
            {
                <a style="text-decoration:none;" asp-controller="Chart" asp-action="Index" asp-route-Id="@item.Id">
                    @Html.Raw("<img style='width:200px; height:200px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.Image) + "\" />")
                </a>
            }
        </div>
    </div>
</div>
<style>
    img {
        margin: 15px;
    }
</style>
