@model ImageProject.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="card d-block mx-auto" style="width: 20rem;">
    <form class="card-body" method="post" asp-action="Register" asp-controller="Account">
        <h1 class="h3 mb-3 fw-normal">Registration</h1>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-floating">
            <input class="form-control" type="text" id="floatingUsername" asp-for="UserName" placeholder="User name" /><br />
            <label for="floatingUsername">User name</label>
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-floating">
            <input class="form-control" type="email" id="floatingEmail" asp-for="Email" placeholder="Email" /><br />
            <label for="floatingEmail">Email</label>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-floating">
            <input class="form-control" type="password" id="floatingPassword" asp-for="Password" placeholder="Password" /><br />
            <label for="floatingPassword">Password</label>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-floating">
            <input class="form-control" type="password" id="floatingPasswordConfirm" asp-for="PasswordConfirm" placeholder="Password Confirm" /><br />
            <label for="floatingPasswordConfirm">Password Confirm</label>
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
        <div>
            <input class="w-100 btn btn-lg btn-primary" type="submit" value="Registration" />
        </div>
    </form>
</div>